<div class="content-area">
  <div class="article">

    <h1 class="article-title">
      <a href="<%- url_for(page.path) %>" rel="bookmark">
        <%- page.title || theme.default_post_title || "Untitled" %>  
      </a>
    </h1>
   
    <p class="article-date">
      <%= page.date.format(config.date_format) %>
    </p>

    <% if(page.tags){ %>
    <div class="article-tag">
      <% page.tags.each(function(tag){ %>
      <a href="<%- url_for(tag.name) %>/" rel="tag">
        <%- tag.name %>
      </a>
      <% }); %>
    </div>
    <% } %>
    
    <div class="article-content entry-content markdown">
        <%- page.content %>
    </div>



  <% if (page.prev || page.next){ %>
  <ul class="pager">
    <% if (page.prev){ %>
      <li class="prev">
        <a href="<%- url_for(page.prev.path)%>">
          <%= __('prev') %>
        </a>
      </li>
    <% } %>

    <% if (page.next){ %>
      <li class="next">
        <a href="<%- url_for(page.next.path)%>">
          <%= __('next') %>
        </a>
      </li>
    <% } %>
  </ul>
  <% } %>


    <% if (config.duoshuo_shortname){ %>
      <!-- 多说评论框 start -->
        <div class="ds-thread" data-thread-key="<%= page.path %>" data-title="<%= page.title %>" data-url="<%= page.permalink %>"></div>  
      <!-- 多说评论框 end -->
      <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
      <script type="text/javascript">
      var duoshuoQuery = {short_name:'<%= config.duoshuo_shortname %>'};
        (function() {
          var ds = document.createElement('script');
          ds.type = 'text/javascript';ds.async = true;
          ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
          ds.charset = 'UTF-8';
          (document.getElementsByTagName('head')[0] 
           || document.getElementsByTagName('body')[0]).appendChild(ds);
        })();
        </script>
      <!-- 多说公共JS代码 end -->
    <% } %>

  </div>


</div>

